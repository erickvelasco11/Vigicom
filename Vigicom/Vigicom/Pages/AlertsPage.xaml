                       Grid.Row="1"
                       Placeholder="Alerta 2"
                       HorizontalOptions="FillAndExpand"
                       Text="{Binding Number2}" />
                <Picker Grid.Column="1"
                        Grid.Row="1"
                        Title="Selecciona"
                        SelectedItem="{Binding Type2}">
                    <Picker.Items>
                        <x:String>Texto</x:String>
                        <x:String>Llamada</x:String>
                    </Picker.Items>
