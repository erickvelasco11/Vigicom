                             Grid.Row="1"
                             Source="ic_action_send.png"
                             Padding="16"
                             BackgroundColor="Transparent"
                             CornerRadius="16"
                             xct:TouchEffect.NativeAnimation="True"
                             xct:IconTintColorEffect.TintColor="Gray"
                             Command="{Binding BtnSend2Command}" />
