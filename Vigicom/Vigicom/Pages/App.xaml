<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vigicom.Pages.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="ColorPrimary">#003884</Color>
            <Color x:Key="ColorPrimaryDark">#303F9F</Color>
            <Color x:Key="ColorAccent">#cd1313</Color>
            <Color x:Key="mWhite">#FFFFFF</Color>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="{ StaticResource ColorPrimary }"></Setter>
                <Setter Property="TextColor"
                        Value="{ StaticResource mWhite}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>