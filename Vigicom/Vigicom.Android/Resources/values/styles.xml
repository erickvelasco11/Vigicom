<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>

  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#003884</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#001456</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#840042</item>
    <!--<item name="colorPrimaryLight">#4861b4</item>-->
    <!--<item name="colorAccentDark">#52001c</item>-->
    <!--<item name="colorAccentLight">#b8406d</item>-->
    <item name="windowActionModeOverlay">true</item>
    <item name="android:actionBarPopupTheme">@style/CustomActionBarPopupTheme</item>
    <item name="android:forceDarkAllowed">false</item>
    <!--<item name="android:actionBarSize">150dp</item>-->
  </style>

  <style name="CustomActionBarPopupTheme" parent="android:ThemeOverlay.Material.Light">
    <item name="android:colorBackground">#FFFFFF</item>
    <item name="android:textColor">#000000</item>
  </style>
</resources>